[Unit]
Description=RatePAP Telegram Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/ratepap-bot
EnvironmentFile=/home/ubuntu/ratepap-bot/.env
ExecStart=/home/ubuntu/ratepap-bot/.venv/bin/python -m bot.main
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
